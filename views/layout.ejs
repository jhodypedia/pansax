<!doctype html>
<html lang="id" data-bs-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Finance Dashboard</title>

  <!-- Bootstrap, Icons, Animations, Toastr -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <style>
    body { min-height: 100vh; background: radial-gradient(1000px 600px at 10% 10%, #1f2733, #0f1420); }
    .glass { backdrop-filter: blur(10px); background: rgba(255,255,255,.05); border:1px solid rgba(255,255,255,.08); border-radius: 14px; }
    .card.glow:hover { box-shadow: 0 10px 30px rgba(0,0,0,.35); transform: translateY(-2px); transition:.2s; }
    .stat { font-size:1.4rem; font-weight:700 }
    .muted { opacity:.8 }
    nav a { color:#9bd3ff; text-decoration:none; margin-right:14px }
    .badge-income { background:#133b1a; color:#9cffb3 }
    .badge-expense { background:#3b1212; color:#ff9b9b }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg glass sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold text-info"><i class="fa-solid fa-coins me-2"></i>Finance</a>
      <div class="ms-auto">
        <a href="/" class="me-3"><i class="fa fa-gauge"></i> Dashboard</a>
        <a href="/report" class="me-3"><i class="fa fa-chart-line"></i> Laporan</a>
        <a href="/tx/new" class="me-3"><i class="fa fa-plus"></i> Tambah</a>
        <a href="/settings"><i class="fa fa-gear"></i> Settings</a>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    
    <%- body %>
  </div>

  <!-- JS libs -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>AOS.init({ once:true, duration:600 });</script>

  <% if (flash) { %>
  <script>
    toastr.options = { positionClass: "toast-bottom-right", timeOut: 2500 };
    toastr["<%= flash.type %>"]("<%= flash.msg %>");
  </script>
  <% } %>
</body>
</html>
